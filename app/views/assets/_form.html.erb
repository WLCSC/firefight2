<%= form_for @asset, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :room_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :room_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tag, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tag, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :os, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :os, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :model_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :model_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :serial, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :serial, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :purchase, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :purchase, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cost, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :cost, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :vendor_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :super, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :super, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                assets_path, :class => 'btn' %>
  </div>
<% end %>
