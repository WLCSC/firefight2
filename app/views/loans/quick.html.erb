<%= form_tag assign_loans_path do %>
    <div class="field">
        <%= label_tag :start_date %><br />
        <%= text_field_tag :start %>
    </div>
    <div class="field">
        <%= label_tag :end_date %><br />
        <%= text_field_tag :end %>
    </div>
    <div class="field">
        <%= label_tag :user %>
        <%= text_field_tag :username %>
    </div>
    <div class="field">
        <%= label_tag :tag %>
        <%= text_field_tag :tag %>
    </div>

    <%= submit_tag "Go", :class => 'btn btn-large btn-primary' %>
<% end %>
<%= javascript_tag do %>
	$(document).ready(function() {
	$('#start').datepicker();
	$('#end').datepicker();
	});
<% end %>
