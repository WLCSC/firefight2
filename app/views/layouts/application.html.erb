<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= content_for?(:title) ? yield(:title) : "Firefight2" %></title>
		<%= csrf_meta_tags %>

		<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
		<![endif]-->

		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/base/jquery-ui.css" %>

		<%= javascript_include_tag "application" %>
		<link href="images/favicon.ico" rel="shortcut icon">
		<link href="images/apple-touch-icon.png" rel="apple-touch-icon">
		<link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
		<link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
	</head>
	<body>

		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</a>
					<a class="brand" href="/"><%= image_tag 'logo.png'%>Firefight</a>
					<div class="container nav-collapse">

						<ul class="nav">
							<% if current_user %>
								<li><%= link_to "Submit New Ticket", buildings_path  %></li>
								<li><%= link_to "Request Equipment", new_loan_path  %></li>
								<% if  current_user.admin? %>
									<li><%= link_to "All Tickets", tickets_path %></li>
									<li><%= link_to "All Loans", loans_path %></li>
									<li><%= link_to "Management", '/home/tools' %></li>
								<% end %>
							<% end %>

						</ul>

						<ul class="nav pull-right">
							<% if current_user %><li><%= form_tag '/assets/quick', :class => 'form-search' do %>
								<%= hidden_field_tag :return, :nil, :value => @url %>
								<%= text_field :tag, nil, :class => 'input-small', :style => 'height: 12px; line-height: 12px; font-size: 10px; margin-top: 5px; margin-bottom: -15px;', :placeholder => 'Jump to Tag' %>
								<%= submit_tag 'Go', :class => 'btn btn-mini btn-success', :style => 'margin-top: 5px; margin-bottom: -15px;' %>	
							<% end %></li>
							<li><%= link_to "Log Out", '/sessions/destroy' %></li><% end %>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>
	</div>



	<div class="container">
		<div class="content">
			<div class="row">
				<% @skip_sidebar ||= false %>
				<div class="<%= @skip_sidebar ? "span12" : "span8" %>">
					<% flash.each do |type, message| %>
						<div class="alert alert-<%= twitterized_type type %>" data-alert="alert">
							<a href="#"i class="close" data-dismiss="alert">&times;</a>
							<p><%= message %></p>
						</div>
					<% end %>

					<%= yield %>
				</div>
				<% unless @skip_sidebar %>
				<div class="span3" style="margin-left: 90px;">
					<% if current_user %>
						<div class="well sidebar-nav">
							<% if content_for? :sidebar %>
								<h3>Tools</h3>
								<ul class="nav nav-list">
									<%= yield :sidebar %>
								</ul>
							<% end %>
							<h3><%= current_user.admin? ? "Jump to Building" : "Submit Ticket" %></h3>
							<ul class="nav nav-list">
								<% Building.all.each do |b| %>
									<li><%= link_to b.name, b %></li>
								<% end %>
							</ul>
							

						</div><!--/.well -->
					<% end %>
				</div><!--/span-->
			<% end %>
			</div><!--/row-->
		</div><!--/content-->

		<footer>
		<p class="pull-right"><a href="https://github.com/WLCSC" class="btn btn-mini" style="margin-top: 10px;margin-right: 5px;">Created by Brad Thompson, West Lafayette Community School Corporation</a></p>
		</footer>

	</div> <!-- /container -->

	<% if current_user %>
		<div class="navbar navbar-fixed-bottom">
			<div class="navbar-inner">
				<div class="container">
					<div class="container nav-collapse">
						<ul class="nav">
							<li><%= link_to "Manage Shortcuts", shortcuts_path, :class => 'btn btn-mini btn-inverse', :style => 'width: 50px; padding-top: 3px; padding-bottom: 3px; line-height: 12px;' %></li>
							<% current_user.shortcuts.order(:position).each do |shortcut| %>
								<li style="margin-bottom: 5px; margin-top: -10px;"><%= link_to shortcut.container.nice_name || "Undefined", shortcut.container %><%= badge_row shortcut.container.tickets, true %></li>
							<% end %>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
		</div>
	<% end %>

	<!-- Javascripts
	================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->

</body>
</html>
