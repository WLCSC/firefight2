<% if @room.tickets.readable_by(current_user).count > 0 %>
<table class="table table-striped table-bordered <%= @room.tickets.count > 0 ? 'datatableable' : '' %>">
	<thead>
		<tr>
			<th>ID</th>
			<th>Submitter</th>
			<th>Submitted</th>
			<th>Due</th>
			<th>Comment</th>
		</tr>
	</thead>
	<tbody>
		<% @room.tickets.readable_by(current_user).each do |ticket| %>
			<tr>
				<td><span class="badge badge<%= bootstrap_status ticket.status %>"><%= link_to ticket.id.to_s.rjust(5,'0'), ticket %></span></td>
				<td><%= link_to ticket.submitter.name, ticket.submitter %></td>
				<td><%= time_delta ticket.created_at %></td>
				<td><%= ticket.due ? time_delta(ticket.due) : "-" %></td>
				<td><%= ticket.comments.first.content %></td>
			</tr>
		<% end %>
	</tbody>
</table>
	<% else %>
		<p>No Open Tickets Found</p>
	<% end %>
