<%= form_for @model, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :manufacturer_id, :class => 'control-label' %>
    <div class="controls">
	    <%= f.select :manufacturer_id, Manufacturer.all.map{|m| [m.name, m.id]} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rtype_id, :class => 'control-label' %>
    <div class="controls">
	    <%= f.select :rtype_id, Rtype.all.map{|r| [r.name, r.id]} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                models_path, :class => 'btn' %>
  </div>
<% end %>
